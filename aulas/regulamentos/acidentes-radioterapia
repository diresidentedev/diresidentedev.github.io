                        <div class="accident-icon warning">üîÑ</div>
                    </div>

                    <!-- Conte√∫do Expandido Acidente 2007 -->
                    <div class="accident-expanded" id="content-ac-2007">
                        <div class="accident-detail-box">
                            <div class="info-box warning" style="margin-top: 0;">
