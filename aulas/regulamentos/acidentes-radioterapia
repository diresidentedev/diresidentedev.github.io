    <script>
        // ========== CONTADORES ANIMADOS ========== //
        function animateCounter(element, target) {
            let current = 0;
            const increment = target / 80;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = target;
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current);
                }
            }, 20);
        }

        window.addEventListener('load', () => {
            const counters = document.querySelectorAll('.stat-number');
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                animateCounter(counter, target);
            });
        });

        // ========== EXPANDIR CARDS DE FERRAMENTAS ========== //
        function toggleTool(toolName) {
            const card = document.getElementById(toolName + 'Card');
            const details = document.getElementById(toolName + 'Details');

            document.querySelectorAll('.tool-card').forEach(c => {
                if (c.id !== card.id) {
                    c.classList.remove('expanded');
                    const det = c.querySelector('.tool-details');
                    if (det) det.style.maxHeight = '0';
                }
            });

            card.classList.toggle('expanded');

            if (card.classList.contains('expanded')) {
                details.style.maxHeight = details.scrollHeight + 'px';
                setTimeout(() => {
                    card.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }, 300);
            } else {
                details.style.maxHeight = '0';
            }
        }

        // ========== MAPA DE PROCESSOS ========== //
        const processData = {
            1: { name: "Simula√ß√£o", description: "Aquisi√ß√£o de imagens tomogr√°ficas com o paciente na posi√ß√£o de tratamento.", failures: [{ mode: "Posicionamento incorreto do paciente", rpn: 120 }, { mode: "Espessura de corte inadequada", rpn: 80 }, { mode: "Artefatos nas imagens (pr√≥teses, movimento)", rpn: 90 }] },
            2: { name: "Contorno", description: "Delineamento do volume alvo (GTV, CTV, PTV) e √≥rg√£os de risco (OAR).", failures: [{ mode: "Contorno de OAR incompleto", rpn: 180 }, { mode: "Estruturas trocadas (direita/esquerda)", rpn: 240 }, { mode: "Margens de PTV inadequadas", rpn: 200 }] },
            3: { name: "Planejamento", description: "Otimiza√ß√£o do plano IMRT com distribui√ß√£o de dose adequada.", failures: [{ mode: "Arquivo MLC n√£o salvo corretamente", rpn: 320 }, { mode: "Energia errada selecionada (6MV vs 10MV)", rpn: 280 }, { mode: "Ponto de normaliza√ß√£o incorreto", rpn: 150 }, { mode: "Dose por fra√ß√£o errada na prescri√ß√£o", rpn: 200 }] },
            4: { name: "Verifica√ß√£o UM", description: "Verifica√ß√£o independente das unidades monitoras calculadas pelo TPS.", failures: [{ mode: "Verifica√ß√£o independente n√£o realizada", rpn: 250 }, { mode: "Software de verifica√ß√£o com dados incorretos", rpn: 200 }, { mode: "Toler√¢ncia de diferen√ßa inadequada (>5%)", rpn: 180 }, { mode: "Densidade eletr√¥nica n√£o corrigida", rpn: 160 }] },
            5: { name: "QA Paciente", description: "Verifica√ß√£o dosim√©trica do plano antes do tratamento (medi√ß√£o vs planejado).", failures: [{ mode: "QA pr√©-tratamento n√£o realizado", rpn: 350 }, { mode: "QA realizado mas n√£o analisado criticamente", rpn: 280 }, { mode: "Crit√©rios gamma inadequados (ex: 5%/5mm)", rpn: 150 }] },
            6: { name: "Tratamento", description: "Execu√ß√£o di√°ria do tratamento com imagem de verifica√ß√£o (IGRT).", failures: [{ mode: "Paciente errado tratado", rpn: 300 }, { mode: "Setup incorreto sem IGRT", rpn: 180 }, { mode: "Alerta do console ignorado", rpn: 280 }, { mode: "Plano errado selecionado", rpn: 260 }] }
        };

        function showProcessDetail(stepNumber) {
            const data = processData[stepNumber];
            const detailDiv = document.getElementById('processDetail');

            document.querySelectorAll('.process-step').forEach(step => step.classList.remove('active'));
            event.currentTarget.classList.add('active');

            detailDiv.style.display = 'block';
            detailDiv.innerHTML = `
                <h4 style="color: var(--accent-cyan); margin-bottom: 12px;">üéØ ${data.name}</h4>
                <p style="color: var(--text-secondary); margin-bottom: 16px;">${data.description}</p>
                <h5 style="color: var(--text-primary); margin-bottom: 12px;">‚ö†Ô∏è Modos de Falha Potenciais:</h5>
                ${data.failures.map(failure => `
                    <div class="failure-item">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <strong style="color: var(--text-primary);">${failure.mode}</strong>
                            <div style="text-align: right;">
                                <div style="font-size: 20px; font-weight: bold; color: ${getRPNColor(failure.rpn)}; font-family: 'JetBrains Mono', monospace;">${failure.rpn}</div>
                                <div style="font-size: 10px; color: var(--text-muted);">RPN</div>
                            </div>
                        </div>
                    </div>
                `).join('')}
            `;
        }

        function getRPNColor(rpn) {
            if (rpn < 75) return 'var(--accent-emerald)';
            if (rpn <= 125) return 'var(--accent-amber)';
            if (rpn <= 200) return 'var(--accent-rose)';
            return 'var(--accent-crimson)';
        }

        // ========== CALCULADORA RPN ========== //
        const oSlider = document.getElementById('occurrenceFMEA');
        const sSlider = document.getElementById('severityFMEA');
        const dSlider = document.getElementById('detectabilityFMEA');

        const occurrenceDesc = { 1: "Improv√°vel de acontecer (0,01%)", 2: "Muito poucas falhas (0,02%)", 3: "Poucas falhas (0,05%)", 4: "Baixa frequ√™ncia (0,1%)", 5: "Falhas ocasionais (<0,2%)", 6: "Falhas ocasionais (<0,5%)", 7: "Falhas repetidas (<1%)", 8: "Falhas frequentes (<2%)", 9: "Muito frequentes (<5%)", 10: "Falhas inevit√°veis (>5%)" };
        const severityDesc = { 1: "Sem efeito - sem dano", 2: "Inconveni√™ncia leve", 3: "Inconveni√™ncia moderada", 4: "Erro dosim√©trico pequeno", 5: "Toxicidade ou subdosagem", 6: "Toxicidade moderada", 7: "Toxicidade importante", 8: "Toxicidade significativa", 9: "Toxicidade s√©ria", 10: "Consequ√™ncias catastr√≥ficas" };
        const detectabilityDesc = { 1: "F√°cil detectar (0,01%)", 2: "Alta probabilidade (0,2%)", 3: "Boa chance (0,5%)", 4: "Moderada chance (1%)", 5: "Probabilidade moderada de n√£o detectar (2%)", 6: "Baixa probabilidade (5%)", 7: "Muito baixa (10%)", 8: "Dif√≠cil detectar (15%)", 9: "Muito dif√≠cil (20%)", 10: "Quase imposs√≠vel (>20%)" };

        const riskLevels = {
            low: { threshold: 75, className: 'risk-low', icon: 'üü¢', level: 'RISCO BAIXO', description: 'Situa√ß√£o controlada. Manter vigil√¢ncia de rotina.', barriers: ['Procedimentos padr√£o s√£o suficientes', 'Revis√£o peri√≥dica do processo', 'Documenta√ß√£o b√°sica'] },
            moderate: { threshold: 125, className: 'risk-moderate', icon: 'üü°', level: 'RISCO MODERADO', description: 'Requer aten√ß√£o. Implementar barreiras preventivas.', barriers: ['Checklist de verifica√ß√£o dupla', 'Treinamento espec√≠fico da equipe', 'Revis√£o por segundo profissional'] },
            high: { threshold: 200, className: 'risk-high', icon: 'üü†', level: 'RISCO ALTO', description: 'A√ß√£o priorit√°ria necess√°ria! Implementar m√∫ltiplas barreiras.', barriers: ['C√°lculo independente obrigat√≥rio', 'Sistema de alarme/alerta', 'Verifica√ß√£o em 3 n√≠veis', 'QA espec√≠fico antes de tratar'] },
            critical: { threshold: Infinity, className: 'risk-critical', icon: 'üî¥', level: 'RISCO CR√çTICO', description: 'A√á√ÉO IMEDIATA! Risco inaceit√°vel - processo deve ser modificado.', barriers: ['Parada do processo at√© implementa√ß√£o de barreiras', 'Automa√ß√£o com verifica√ß√£o redundante', 'Impossibilidade f√≠sica de erro (fail-safe)', 'Auditoria externa obrigat√≥ria'] }
        };

        function calculateRPN() {
            const o = parseInt(oSlider.value);
            const s = parseInt(sSlider.value);
            const d = parseInt(dSlider.value);

            document.getElementById('oValueFMEA').textContent = o;
            document.getElementById('sValueFMEA').textContent = s;
            document.getElementById('dValueFMEA').textContent = d;

            document.getElementById('oDesc').textContent = occurrenceDesc[o];
            document.getElementById('sDesc').textContent = severityDesc[s];
            document.getElementById('dDesc').textContent = detectabilityDesc[d];

            const rpn = o * s * d;

            document.getElementById('rpnCalc').textContent = `${o} √ó ${s} √ó ${d}`;

            const rpnValue = document.getElementById('rpnValueDisplay');
            rpnValue.style.transform = 'scale(1.1)';
            setTimeout(() => rpnValue.style.transform = 'scale(1)', 200);
            rpnValue.textContent = rpn;

            let riskCategory;
            if (rpn <= riskLevels.low.threshold) riskCategory = riskLevels.low;
            else if (rpn <= riskLevels.moderate.threshold) riskCategory = riskLevels.moderate;
            else if (rpn <= riskLevels.high.threshold) riskCategory = riskLevels.high;
            else riskCategory = riskLevels.critical;

            document.getElementById('rpnLevel').textContent = `${riskCategory.icon} ${riskCategory.level}`;
            document.getElementById('rpnAction').textContent = riskCategory.description;
            document.getElementById('rpnResult').className = 'rpn-result ' + riskCategory.className;
            document.getElementById('barriersList').innerHTML = riskCategory.barriers.map(b => `<li>${b}</li>`).join('');
        }

        if (oSlider) {
            oSlider.addEventListener('input', calculateRPN);
            sSlider.addEventListener('input', calculateRPN);
            dSlider.addEventListener('input', calculateRPN);
            calculateRPN();
        }

        // ========== MATRIZ SEVRRA ========== //
        function showRiskExample(fpKey, cKey, riskLevel) {
            const exampleDiv = document.getElementById('riskExample');
            const colors = { 'RB': 'var(--accent-emerald)', 'RM': 'var(--accent-amber)', 'RA': 'var(--accent-rose)', 'RMA': 'var(--accent-crimson)' };

            exampleDiv.style.display = 'block';
            exampleDiv.innerHTML = `
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;">
                    <h4 style="color: ${colors[riskLevel]}; margin: 0;">Categoria: ${riskLevel}</h4>
                    <span style="background: ${colors[riskLevel]}; color: white; padding: 8px 16px; border-radius: 20px; font-weight: bold;">${riskLevel}</span>
                </div>
                <p style="color: var(--text-secondary);">Clique nas diferentes c√©lulas da matriz para explorar os n√≠veis de risco e entender como frequ√™ncia, probabilidade e consequ√™ncia se combinam para determinar a classifica√ß√£o final.</p>
            `;
        }

        // ========== TOGGLE ACIDENTES ========== //
        function toggleAccident(accidentId, clickedElement) {
            const content = document.getElementById('content-' + accidentId);
            if (!content) {
                console.error('Elemento n√£o encontrado: content-' + accidentId);
                return;
            }
            
            const isOpen = content.classList.contains('open');
            const clickedCard = clickedElement;

            // Fechar todos os outros acidentes e remover classe expanded dos cards
            document.querySelectorAll('.accident-expanded').forEach(el => {
                if (el.id !== 'content-' + accidentId) {
                    el.classList.remove('open');
                }
            });
            document.querySelectorAll('.accident-card').forEach(card => {
                if (card !== clickedCard) {
                    card.classList.remove('expanded');
                }
            });

            // Toggle do acidente atual
            if (isOpen) {
                content.classList.remove('open');
                clickedCard.classList.remove('expanded');
            } else {
                content.classList.add('open');
                clickedCard.classList.add('expanded');
                // Scroll suave at√© o conte√∫do
                setTimeout(() => {
                    content.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }, 300);
            }
        }

        // ========== TABS DE AN√ÅLISE ========== //
        function showAnalysisTab(accidentId, tabName) {
            // Esconder todos os conte√∫dos deste acidente
            const allContent = document.getElementById('content-' + accidentId);
            allContent.querySelectorAll('[id^="analysis-' + accidentId + '-"]').forEach(el => {
                el.style.display = 'none';
            });

            // Resetar todos os bot√µes deste acidente
            allContent.querySelectorAll('.analysis-tab').forEach(btn => {
                btn.classList.remove('active');
            });

            // Mostrar conte√∫do selecionado
            document.getElementById('analysis-' + accidentId + '-' + tabName).style.display = 'block';

            // Destacar bot√£o ativo (encontrar o bot√£o correto)
            const tabs = allContent.querySelectorAll('.analysis-tab');
            tabs.forEach(tab => {
                if ((tabName === 'all' && tab.textContent.includes('An√°lises')) ||
                    (tabName === 'barriers' && tab.textContent.includes('Barreiras'))) {
                    tab.classList.add('active');
                }
            });
        }

        // ========== MENU NAVEGA√á√ÉO ========== //
        document.addEventListener('DOMContentLoaded', function () {
            const navItems = document.querySelectorAll('.nav-item');
            const sections = document.querySelectorAll('section[id]');

            function updateActiveNav() {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (scrollY >= (sectionTop - 200)) {
                        current = section.getAttribute('id');
                    }
                });

                navItems.forEach(item => {
                    item.classList.remove('active');
                    if (item.getAttribute('href') === '#' + current) {
                        item.classList.add('active');
                    }
                });
            }

            window.addEventListener('scroll', updateActiveNav);

            navItems.forEach(item => {
                item.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetSection = document.querySelector(targetId);
                    if (targetSection) {
                        targetSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
            });
        });

        // ========== SMOOTH SCROLL ========== //
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</body>

</html>
